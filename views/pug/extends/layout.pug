block variables
  //- define these variables below
    - var page_name

mixin make_title(page_name)
  title satsukizzz note | #{page_name}
mixin make_description(page_name)
  meta(name="description" content="satsukizzz note | " + page_name + ". A portfolio website that uses Material Design Lite.")

