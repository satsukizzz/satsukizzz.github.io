html(lang="ja")

  head
    meta(charset="utf-8")
    meta(http-equiv="X-UA-Compatible" content="IE=edge")
    +make_description(page_name)
    meta(name="viewport" content="width=device-width, initial-scale=1.0, minimum-scale=1.0")
    meta(name="robot" content="index, follow")
    meta(name="google-site-verification" content="MhfTX5GZqa1GgOcNMuRpbc_n4q04O3J0KXoYfUNZNUk")
    +make_title(page_name)
    link(rel="stylesheet" href="https://fonts.googleapis.com/css?family=Roboto:regular,bold,italic,thin,light,bolditalic,black,medium&lang=ja")
    link(rel="stylesheet" href="https://code.getmdl.io/1.3.0/material.grey-pink.min.css")
    link(rel="stylesheet" href="style.css")
    link(rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons")
    block head_scripts

  body
    div(class="mdl-layout mdl-js-layout mdl-layout--fixed-header")
      
      header(class="mdl-layout__header mdl-layout__header--waterfall portfolio-header")
        div(class="mdl-layout__header-row portfolio-nologo-row")
          div(class="mdl-layout--small-screen-only" style="padding-left:56px; padding-right:16px")
            span(class="mdl-layout__title") satsukizzz note
          div(class="mdl-layout--large-screen-only" style="padding-left:16px; padding-right:16px")
            span(class="mdl-layout__title") satsukizzz note
          // Add spacer, to align title to the left
          div(class="mdl-layout-spacer")
        div(class="mdl-layout__header-row portfolio-navigation-row mdl-layout--large-screen-only")
          include ../includes/nav_link.pug
      
      div(class="mdl-layout__drawer mdl-layout--small-screen-only")
        include ../includes/nav_link.pug

      main(class="mdl-layout__content content-wrapper")
        block contents

        footer(class="mdl-mini-footer")
          div(class="mdl-mini-footer__left-section")
            div(class="mdl-logo") satsukizzz note
          address(class="mdl-mini-footer__right-section")
            ul(class="mdl-mini-footer__link-list")
              li
                a(href="https://twitter.com/satsukizzz") Twitter
              li
                a(href="https://qiita.com/satsukizzz") Qiita
              li
                a(href="https://github.com/satsukizzz") GitHub

    block body_last_scripts
      script(src="https://code.getmdl.io/1.3.0/material.min.js")


